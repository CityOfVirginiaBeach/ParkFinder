<Alloy>
	<Window class="container" id="facilityDetailsWindow">
		<RightNavButton>
            <Button id="btnSave" top="-50dp" onClick="closeWindow" title="OK" />
        </RightNavButton>
		<ListView id="facilityDetailsTableView">
			<ListSection id="facilityDetailsTableViewSection" dataCollection="Facility" dataFilter="filterFunction">
				<ListItem id="titleRow" title="{title}" />
				<ListItem id="addressRow" title="{address}" />
			</ListSection>
			<ListSection id="facilityAmenitiesTableView" dataCollection="Amenity" headerTitle="Amenities" dataFilter="amenitiesFilterFunction">
				<ListItem id="titleRow" title="{title}" />
			</ListSection>
		</ListView>
	</Window>
</Alloy>